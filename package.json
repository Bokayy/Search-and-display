{
  "name": "pkc-name",
  "author": "Mladen Panic <mladen.panic@profil-klett.hr>",
  "keywords": ["izzi"],
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build && npm run translations",
    "translations": "json-dir-listing ./src/translations -o translations.json && move-file ./src/translations/translations.json ./dist/translations.json",
    "post-build": "unset GIT_DIR && cd dist && git add *.* && git add js/* && git add css/*"
  },
  "dependencies": {
    "eslint": "^6.8.0",
    "eslint-plugin-vue": "^6.2.2",
    "pk-components-common": "git+ssh://git@git.profil-klett.hr:2288/profil/pk-components-common.git",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.3.0",
    "@vue/cli-plugin-babel": "^3.4.0",
    "@vue/cli-service": "^3.4.0",
    "fibers": "^3.1.1",
    "json-dir-listing": "^0.2.1",
    "pre-commit": "^1.2.2",
    "sass": "^1.16.0",
    "sass-loader": "^7.1.0",
    "move-file-cli": "^1.0.0",
    "vue-template-compiler": "^2.6.11",
    "wrapper-webpack-plugin": "^2.1.0"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "ie 11-12"
  ],
  "pre-commit": [
    "build",
    "post-build"
  ]
}
